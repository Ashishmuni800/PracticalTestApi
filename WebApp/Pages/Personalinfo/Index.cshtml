@page
@model WebApp.Pages.Personalinfo.IndexModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container mt-3">
    <h3><a href="/Personalinfo/Create">Add Personal info</a></h3>
    <table class="table table-bordered table-responsive mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Country Name</th>
                <th>State Namer</th>
                <th>City Name</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PersonalViewModels)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.CountryName</td>
                    <td>@item.StateName</td>
                    <td>@item.CityName</td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> |
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>    |
                        <a asp-page="./View" asp-route-id="@item.Id" class="btn btn-success">View</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
