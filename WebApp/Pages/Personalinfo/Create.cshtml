@page
@model WebApp.Pages.Personalinfo.CreateModel
@{
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>Create Users</h1>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="PrasonalDetailsDTOModels.Name"></label>
                    <input asp-for="PrasonalDetailsDTOModels.Name" class="form-control" />
                    <span asp-validation-for="PrasonalDetailsDTOModels.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrasonalDetailsDTOModels.Email"></label>
                    <input asp-for="PrasonalDetailsDTOModels.Email" class="form-control" type="email" />
                    <span asp-validation-for="PrasonalDetailsDTOModels.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrasonalDetailsDTOModels.Phone"></label>
                    <input asp-for="PrasonalDetailsDTOModels.Phone" class="form-control" type="tel" />
                    <span asp-validation-for="PrasonalDetailsDTOModels.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrasonalDetailsDTOModels.Address"></label>
                    <input asp-for="PrasonalDetailsDTOModels.Address" class="form-control" />
                    <span asp-validation-for="PrasonalDetailsDTOModels.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <option asp-for="PrasonalDetailsDTOModels.CountryId">
                        <select></select>
                    </option>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">Submit</button> |
                    <a asp-page="./Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>


    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
