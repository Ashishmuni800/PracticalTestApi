@page
@model WebApp.Pages.Admin.Users.ViewModel

@{
    ViewData["Title"] = "Home page";
}

<div class="card-body">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header bg-success">
                    <h3 class="card-title text-white">User details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="well">
                                        <label class="font-weight-bold">User Name</label>
                                        <p class="font-weight-bold">@Model.NetUsersDTOModels.Name</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="well">
                                        <label class="font-weight-bold">Email</label>
                                        <p class="font-weight-bold">@Model.NetUsersDTOModels.Email</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="well">
                                        <label class="font-weight-bold">Phone</label>
                                        <p class="font-weight-bold">@Model.NetUsersDTOModels.Phone</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="well">
                                        <label class="font-weight-bold">TotalBillsAmount</label>
                                        <p class="font-weight-bold">@Model.NetUsersDTOModels.UserName</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

