@page
@model WebApp.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Product.ProductName" class="control-label"></label>
            <input asp-for="Product.ProductName" class="form-control" />
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.ProductType" class="control-label"></label>
            <input asp-for="Product.ProductType" class="form-control" />
            <span asp-validation-for="Product.ProductType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.ProductSize" class="control-label"></label>
            <input asp-for="Product.ProductSize" class="form-control" />
            <span asp-validation-for="Product.ProductSize" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.Quantity" class="control-label"></label>
            <input asp-for="Product.Quantity" class="form-control" />
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Product.NumberOfOrders" class="control-label"></label>
            <input asp-for="Product.NumberOfOrders" class="form-control" />
            <span asp-validation-for="Product.NumberOfOrders" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductImage" class="control-label"></label>
            <input asp-for="ProductImage" class="form-control" accept=".jpg, .png" />
            <span asp-validation-for="ProductImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary mt-3" />
        </div>
    </form>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
