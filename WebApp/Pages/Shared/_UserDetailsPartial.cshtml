
@using Application.ViewModel
@model List<AspNetUsersViewModel>;

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container">
    <h3><a href="/Admin/Users/Create">Add Users</a></h3>
    <table class="table table-bordered table-responsive mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Phone Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.UserName</td>
                    <td>@item.Phone</td>
                    <td>
                        <a href="/Admin/Users/Delete/id=@item.Id">Delete</a>
                        @* <form method="post" href="/Admin/Users/Delete/id=@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form> *@
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
